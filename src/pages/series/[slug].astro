		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 3em 1em 4em;
			}
			.breadcrumb {
				font-size: 0.9em;
				color: rgb(var(--gray));
				margin-bottom: 2em;
			}
			.breadcrumb a {
				color: rgb(var(--gray));
				text-decoration: none;
			}
			.breadcrumb a:hover {
				color: var(--accent);
			}
			.series-header {
				margin-bottom: 3em;
			}
			h1 {
				font-size: 2.5em;
				font-weight: 800;
				margin-bottom: 0.5em;
			}
			.series-description {
				color: rgb(var(--gray));
				font-size: 1.1em;
				line-height: 1.7;
				margin-bottom: 1.5em;
			}
			.series-meta {
				display: flex;
				align-items: center;
				gap: 1.5em;
				font-size: 0.9em;
				color: rgb(var(--gray));
			}
			.meta-badge {
				display: inline-flex;
				align-items: center;
				gap: 0.4em;
				padding: 0.4em 0.9em;
				background: rgba(var(--accent-rgb, 91, 109, 255), 0.1);
				color: var(--accent);
				border-radius: 20px;
				font-weight: 600;
			}

			/* Playlist-style layout */
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
				position: relative;
			}

			/* Connecting line between items */
			.post-list::before {
				content: '';
				position: absolute;
				left: 1.75em;
				top: 3em;
				bottom: 3em;
				width: 2px;
				background: linear-gradient(180deg,
					rgba(var(--accent-rgb, 91, 109, 255), 0.3) 0%,
					rgba(var(--accent-rgb, 91, 109, 255), 0.1) 100%);
			}

			.post-item {
				position: relative;
				margin-bottom: 0.5em;
			}

			.post-item:last-child {
				margin-bottom: 0;
			}

			.post-link {
				display: flex;
				align-items: flex-start;
				gap: 1.5em;
				padding: 1em 1.5em;
				background: var(--card-bg);
				border: 1px solid rgba(var(--gray-light), 0.3);
				border-radius: 12px;
				text-decoration: none;
				transition: all 0.2s ease;
				position: relative;
			}

			.post-link:hover {
				background: rgba(var(--accent-rgb, 91, 109, 255), 0.03);
				border-color: rgba(var(--accent-rgb, 91, 109, 255), 0.4);
				transform: translateX(4px);
			}

			/* Number badge */
			.post-number {
				flex-shrink: 0;
				width: 2.5em;
				height: 2.5em;
				background: linear-gradient(135deg, var(--accent) 0%, rgba(var(--accent-rgb, 91, 109, 255), 0.8) 100%);
				color: white;
				border-radius: 8px;
				font-weight: 700;
				font-size: 1em;
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;
				z-index: 1;
			}

			.post-content {
				flex: 1;
				min-width: 0;
			}

			.post-title {
				font-size: 1.2em;
				font-weight: 600;
				margin-bottom: 0.4em;
				color: rgb(var(--black));
				line-height: 1.4;
			}

			.post-link:hover .post-title {
				color: var(--accent);
			}

			.post-description {
				color: rgb(var(--gray));
				font-size: 0.95em;
				line-height: 1.6;
				margin-bottom: 0.6em;
				display: -webkit-box;
