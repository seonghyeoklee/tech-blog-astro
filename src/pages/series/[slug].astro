		},
		'database-fundamentals': {
			name: 'ë°ì´í„°ë² ì´ìŠ¤ ê¸°ì´ˆ',
			description: 'íŠ¸ëœì­ì…˜, ì¸ë±ìŠ¤, ì¿¼ë¦¬ ìµœì í™” ë“± ë°ì´í„°ë² ì´ìŠ¤ì˜ í•µì‹¬ ê°œë…ì„ ì •ë¦¬í•©ë‹ˆë‹¤.',
		},
	};

	const seriesMap = new Map<string, typeof allPosts>();

	allPosts.forEach((post) => {
		if (post.data.series) {
			if (!seriesMap.has(post.data.series)) {
				seriesMap.set(post.data.series, []);
			}
			seriesMap.get(post.data.series)!.push(post);
		}
	});

	return Array.from(seriesMap.entries()).map(([slug, posts]) => {
		const sortedPosts = posts.sort((a, b) => (a.data.seriesOrder || 0) - (b.data.seriesOrder || 0));
		const info = seriesInfo[slug] || { name: slug, description: '' };

		return {
			params: { slug },
			props: {
				series: {
					slug,
					...info,
					posts: sortedPosts,
				},
			},
		};
	});
}

