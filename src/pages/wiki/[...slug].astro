---
import { getCollection, render } from 'astro:content';
import { ViewTransitions } from 'astro:transitions';
import Analytics from '@vercel/analytics/astro';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
	const wiki = await getCollection('wiki');
	return wiki.map((entry) => ({
		params: { slug: entry.id },
		props: { entry, allWiki: wiki },
	}));
}

const { entry, allWiki } = Astro.props;
const { Content } = await render(entry);

const categoryNames: Record<string, string> = {
	database: 'Database',
	java: 'Java',
	spring: 'Spring',
	architecture: 'Architecture',
	infra: 'Infra',
	general: 'General',
};

// 관련 위키 가져오기
const relatedWikis = entry.data.related
	? allWiki.filter((w: any) => entry.data.related.includes(w.id))
	: [];

// 이 위키를 참조하는 다른 위키들
const referencingWikis = allWiki.filter((w: any) =>
	w.data.related?.includes(entry.id) && w.id !== entry.id
);

// 합쳐서 중복 제거
const allRelated = [...relatedWikis];
referencingWikis.forEach((w: any) => {
	if (!allRelated.some((r: any) => r.id === w.id)) {
		allRelated.push(w);
	}
});
---

<html lang="ko" data-theme="dark">
	<head>
		<ViewTransitions />
		<BaseHead title={`${entry.data.term} - Wiki - ${SITE_TITLE}`} description={entry.data.summary} />
		<style>
			main {
				width: 760px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
			}
			.breadcrumb {
				font-size: 0.9em;
				color: rgb(var(--gray));
				margin-bottom: 1.5em;
			}
			.breadcrumb a {
				color: rgb(var(--gray));
				text-decoration: none;
			}
			.breadcrumb a:hover {
				color: var(--accent);
			}
			.term-header {
				margin-bottom: 2em;
			}
			.term-header h1 {
				margin: 0 0 0.5em 0;
				font-size: 2em;
			}
			.term-meta {
				display: flex;
				align-items: center;
				gap: 1em;
				flex-wrap: wrap;
			}
			.category-badge {
				display: inline-block;
				padding: 0.25em 0.75em;
				background: var(--accent);
				color: white;
				border-radius: 4px;
				font-size: 0.85em;
				font-weight: 500;
			}
			.aliases {
				color: rgb(var(--gray));
				font-size: 0.9em;
			}
			.summary {
				background: rgb(var(--gray-light), 0.3);
				padding: 1em 1.25em;
				border-radius: 8px;
				margin-bottom: 2em;
				font-size: 1.05em;
				line-height: 1.6;
				border-left: 4px solid var(--accent);
			}
			.content {
				line-height: 1.8;
			}
			.content h2 {
				margin-top: 2em;
				margin-bottom: 0.75em;
				font-size: 1.4em;
				border-bottom: 1px solid rgb(var(--gray-light));
				padding-bottom: 0.3em;
			}
			.content ul, .content ol {
				padding-left: 1.5em;
			}
			.content li {
				margin: 0.5em 0;
			}
			.content a {
				color: var(--accent);
			}
			.content table {
				width: 100%;
				border-collapse: collapse;
				margin: 1em 0;
			}
			.content th, .content td {
				border: 1px solid rgb(var(--gray-light));
				padding: 0.5em 0.75em;
				text-align: left;
			}
			.content th {
				background: rgb(var(--gray-light), 0.3);
			}
			.related-wikis {
				margin-top: 3em;
				padding-top: 2em;
				border-top: 1px solid rgb(var(--gray-light));
			}
			.related-wikis h2 {
				font-size: 1.2em;
				margin-bottom: 1em;
				color: rgb(var(--gray-dark));
			}
			.related-list {
				display: flex;
				flex-wrap: wrap;
				gap: 0.75em;
			}
			.related-item {
				display: inline-flex;
				align-items: center;
				gap: 0.5em;
				padding: 0.5em 1em;
				background: var(--card-bg);
				border: 1px solid rgb(var(--gray-light));
				border-radius: 20px;
				text-decoration: none;
				transition: all 0.2s;
			}
			.related-item:hover {
				border-color: var(--accent);
				background: rgb(var(--accent-rgb), 0.05);
			}
			.related-term {
				color: rgb(var(--gray-dark));
				font-weight: 500;
			}
			.related-category {
				font-size: 0.75em;
				color: rgb(var(--gray));
				background: rgb(var(--gray-light), 0.5);
				padding: 0.2em 0.5em;
				border-radius: 4px;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<nav class="breadcrumb">
				<a href="/wiki">Wiki</a> / {entry.data.term}
			</nav>

			<header class="term-header">
				<h1>{entry.data.term}</h1>
				<div class="term-meta">
					<span class="category-badge">{categoryNames[entry.data.category]}</span>
					{entry.data.aliases && entry.data.aliases.length > 0 && (
						<span class="aliases">
							다른 이름: {entry.data.aliases.join(', ')}
						</span>
					)}
				</div>
			</header>

			<div class="summary">
				{entry.data.summary}
			</div>

			<article class="content">
				<Content />
			</article>

			{allRelated.length > 0 && (
				<section class="related-wikis">
					<h2>연결된 개념</h2>
					<div class="related-list">
						{allRelated.map((wiki: any) => (
							<a href={`/wiki/${wiki.id}`} class="related-item">
								<span class="related-term">{wiki.data.term}</span>
								<span class="related-category">{categoryNames[wiki.data.category]}</span>
							</a>
						))}
					</div>
				</section>
			)}
		</main>
		<Footer />
		<Analytics />
	</body>
</html>
