---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import Search from './Search.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<!-- 모바일 햄버거 메뉴 버튼 -->
		<button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="메뉴 열기" aria-expanded="false">
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
		</button>

		<div class="internal-links" id="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/wiki">Wiki</HeaderLink>
			<HeaderLink href="/series">Series</HeaderLink>
			<HeaderLink href="/resources">Resources</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="right-section">
			<Search />
			<a href="https://github.com/seonghyeoklee" target="_blank" class="github-link" aria-label="GitHub">
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<ThemeToggle />
		</div>
	</nav>

	<!-- 모바일 메뉴 오버레이 -->
	<div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>
</header>

<script>
	function initMobileMenu() {
		const menuBtn = document.getElementById('mobile-menu-btn');
		const navLinks = document.getElementById('nav-links');
		const overlay = document.getElementById('mobile-menu-overlay');

		if (!menuBtn || !navLinks || !overlay) return;

		function toggleMenu() {
			const isOpen = navLinks.classList.contains('active');
			navLinks.classList.toggle('active');
			overlay.classList.toggle('active');
			menuBtn.classList.toggle('active');
			menuBtn.setAttribute('aria-expanded', (!isOpen).toString());

			// 메뉴 열릴 때 스크롤 방지
			document.body.style.overflow = isOpen ? '' : 'hidden';
		}

		function closeMenu() {
			navLinks.classList.remove('active');
			overlay.classList.remove('active');
			menuBtn.classList.remove('active');
			menuBtn.setAttribute('aria-expanded', 'false');
			document.body.style.overflow = '';
		}

		// 이벤트 리스너 중복 방지
		menuBtn.removeEventListener('click', toggleMenu);
		overlay.removeEventListener('click', closeMenu);

		menuBtn.addEventListener('click', toggleMenu);
		overlay.addEventListener('click', closeMenu);

		// 메뉴 링크 클릭 시 닫기
		navLinks.querySelectorAll('a').forEach(link => {
			link.addEventListener('click', closeMenu);
		});

		// ESC 키로 닫기
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && navLinks.classList.contains('active')) {
				closeMenu();
			}
		});
	}

	// 초기화
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initMobileMenu);
	} else {
		initMobileMenu();
	}

	// View Transitions 대응
	document.addEventListener('astro:page-load', initMobileMenu);
</script>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		transition: background-color 0.3s ease;
	}
	.right-section {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.github-link {
		display: flex;
		align-items: center;
		gap: 0.3em;
	}
	.github-link svg {
		transition: transform 0.2s ease;
	}
	.github-link:hover svg {
		transform: scale(1.1);
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}

	/* 모바일 메뉴 버튼 */
	.mobile-menu-btn {
		display: none;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 5px;
		width: 40px;
		height: 40px;
		background: transparent;
		border: none;
		cursor: pointer;
		padding: 8px;
		z-index: 1001;
	}

	.hamburger-line {
		display: block;
		width: 24px;
		height: 2px;
		background: rgb(var(--black));
		border-radius: 2px;
		transition: all 0.3s ease;
	}

	/* 햄버거 → X 애니메이션 */
	.mobile-menu-btn.active .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(5px, 5px);
	}

	.mobile-menu-btn.active .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.mobile-menu-btn.active .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(5px, -5px);
	}

	/* 모바일 오버레이 */
	.mobile-menu-overlay {
		display: none;
		position: fixed;
		inset: 0;
		background: rgba(0, 0, 0, 0.5);
		z-index: 999;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.mobile-menu-overlay.active {
		opacity: 1;
	}

	/* 모바일 반응형 */
	@media (max-width: 768px) {
		.mobile-menu-btn {
			display: flex;
		}

		.mobile-menu-overlay {
			display: block;
			pointer-events: none;
		}

		.mobile-menu-overlay.active {
			pointer-events: auto;
		}

		.internal-links {
			position: fixed;
			top: 0;
			right: -280px;
			width: 280px;
			height: 100vh;
			flex-direction: column;
			align-items: flex-start;
			gap: 0;
			background: var(--header-bg);
			padding: 80px 0 2em 0;
			z-index: 1000;
			transition: right 0.3s ease;
			box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
			overflow-y: auto;
		}

		.internal-links.active {
			right: 0;
		}

		.internal-links :global(a) {
			width: 100%;
			padding: 1em 1.5em !important;
			border-bottom: 1px solid rgb(var(--gray-light));
			font-size: 1.1em;
		}

		.internal-links :global(a):hover {
			background: rgba(var(--gray-light), 0.3);
		}

		nav {
			position: relative;
		}

		.right-section {
			gap: 0.3em;
		}

		.github-link svg {
			width: 20px;
			height: 20px;
		}
	}

	@media (max-width: 480px) {
		header {
			padding: 0 0.5em;
		}

		h2 {
			font-size: 0.9em;
		}

		.right-section {
			gap: 0.2em;
		}

		.internal-links {
			width: 100%;
			right: -100%;
		}
	}
</style>
